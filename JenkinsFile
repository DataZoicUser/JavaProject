pipeline {
    agent any
    tools {
        maven 'Maven 3.x'
    }
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/DataZoicUser/JavaProject.git'
                sh 'mvn clean install'
            }
        }
        stage('Deploy') {
            steps {
                sh "curl -u varadharajan:Fortuner@98 -T 'target/*.war' 'http://localhost:8082/manager/text/deploy?path=/javaee-webapp/HelloWorld&update=true'"
            }
        }
    }
    triggers {
        pollSCM('H/10 * * * *')
    }
}
